{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "es2020",
    "lib": ["ES2020", "ES2021", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "noImplicitOverride": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "types": [],
    "incremental": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}